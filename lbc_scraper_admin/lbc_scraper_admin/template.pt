<html>
  <body>
    <div tal:repeat="recipient recipients">
      <h1>${"%s (%s)" % (recipient.name, recipient.email)}</h1>
      <form action="${request.route_url('main')}" method="post">
        <table border=true>
          <tr>
            <td>Nom</td>
            <td>URL</td>
          </tr>
          <tr tal:repeat="alert recipient.alerts">
            <td>${alert.name}</td>
            <td>${alert.url}</td>
          </tr>
          <tr>
            <td><input type="string" name="name"></td>
            <td><input type="string" name="url"></td>
          </tr>
        <input type="hidden" name="id_recipient" value="${recipient.id_recipient}">
      </table>
    </form>
    </div>
  </body>
</html>
